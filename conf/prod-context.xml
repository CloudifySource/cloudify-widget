<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="deployManager" class="beans.DeployManagerImpl"/>
    <bean id="expiredServerCollector" class="beans.ExpireServersCollectorImpl"/>
    <bean id="serverBootstrapper" class="beans.ServerBootstrapperImpl"/>
    <bean id="serverPool" class="beans.ServerPoolImpl" init-method="init"/>
    <bean id="widgetServer" class="beans.WidgetServerImpl"/>

    <context:annotation-config />
    <context:component-scan base-package="beans" />

</beans>